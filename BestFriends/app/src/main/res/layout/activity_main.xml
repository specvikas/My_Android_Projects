<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout

    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:alpha="0.8"
    tools:context=".MainActivity">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:scaleType="centerCrop"
        android:src="@drawable/puppystore" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/address"
        android:text="My Best Friend ,"
        android:textColor="@android:color/background_light"
        android:layout_alignParentRight="true"
        android:textSize="36sp"
        android:fontFamily="cursive"
        android:layout_marginEnd="16sp"
        android:layout_marginTop="16sp"/>

    <TextView
        android:id="@+id/first"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@id/address"
        android:fontFamily="cursive"
        android:paddingTop="32sp"
        android:text="I Love You "
        android:textColor="@android:color/background_light"
        android:textSize="36sp" />

    <TextView
        android:id="@+id/second"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@id/first"
        android:fontFamily="cursive"
        android:paddingTop="8sp"
        android:text="not only for"
        android:textColor="@android:color/background_light"
        android:layout_marginEnd="16sp"
        android:textSize="36sp" />

    <TextView
        android:id="@+id/third"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@id/second"
        android:fontFamily="cursive"
        android:paddingEnd="10sp"
        android:paddingTop="8sp"
        android:text="what you are "
        android:textColor="@android:color/background_light"
        android:textSize="36sp" />

    <TextView
        android:id="@+id/fourth"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@id/third"
        android:fontFamily="cursive"
        android:paddingEnd="10sp"
        android:text="but what I am"
        android:textColor="@android:color/background_light"
        android:textSize="36sp" />

    <TextView
        android:id="@+id/fifth"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@id/fourth"
        android:fontFamily="cursive"
        android:paddingEnd="10sp"
        android:text="when I am"
        android:textColor="@android:color/background_light"
        android:textSize="36sp" />

    <TextView
        android:id="@+id/sixth"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@id/fifth"
        android:fontFamily="cursive"
        android:paddingEnd="10sp"
        android:text="with you ."
        android:textColor="@android:color/background_light"
        android:textSize="36sp"
        android:textStyle="bold"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:fontFamily="cursive"
        android:text="Happy  Friendship  Day"
        android:textAllCaps="true"
        android:textColor="#ffffff"
        android:textSize="32sp"
        android:textStyle="bold"
        />

</RelativeLayout>